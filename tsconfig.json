{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "allowJs": true,
    "types": ["node", "jest", "jest-extended", "bootstrap"],
    "experimentalDecorators": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./src/*"],
      "vexflow": ["./node_modules/vxflw-early-access"]
    }
  },
  "include": ["src/**/*", "tests/**/*", "site/src/**/*"],
  "exclude": ["node_modules"]
}
